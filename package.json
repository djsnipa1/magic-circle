{
  "name": "creative-controls",
  "private": true,
  "scripts": {
    "postinstall": "lerna run bootstrap",
    "build:dev": "lerna run start --parallel",
    "start": "nodemon --exec \"npm run build:dev\"",
    "example:simple": "cd examples/simple && npm run serve && cd ../..",
    "electron": "cd examples/simple && npm run electron && cd ../..",
    "prettier": "prettier --config --write \"{core,examples,plugins}/**/*.js\"",
    "lint": "eslint \"{core,examples,plugins}/**/*.js\"",
    "test": "npm run lint"
  },
  "devDependencies": {
    "@babel/core": "^7.1.5",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.12.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^3.4.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.3",
    "husky": "^1.3.1",
    "lerna": "^3.4.3",
    "lint-staged": "^8.1.0",
    "nodemon": "^1.18.9",
    "prettier": "^1.15.3",
    "rollup": "^1.1.0",
    "rollup-plugin-babel": "^4.3.0",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-node-resolve": "^4.0.0",
    "rollup-plugin-peer-deps-external": "^2.2.0"
  },
  "lint-staged": {
    "*.{js,jsx,json}": [
      "prettier --config --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run lint"
    }
  },
  "nodemonConfig": {
    "ignore": [
      "dist/*"
    ]
  },
  "dependencies": {}
}
