{
  "name": "magic-circle",
  "private": true,
  "description": "Magic Circle main repo",
  "keywords": [
    "controls",
    "creative coding",
    "editor"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/dpwoert/magic-circle.git"
  },
  "author": "Davey van der Woert <davey@dpwoert.com> (http://dpwoert.com)",
  "license": "MIT",
  "scripts": {
    "postinstall": "lerna bootstrap",
    "watch": "lerna run watch",
    "build:dev": "lerna run build:dev",
    "build:prod": "lerna run build:prod",
    "build:icons": "lerna run generate:icons --scope @magic-circle/editor",
    "example": "sh examples/run.sh",
    "publish:npm": "sh publish.sh",
    "publish:online": "lerna run package --scope @magic-circle/online",
    "prettier": "prettier --config --write \"{core,examples,plugins}/**/*.{js,jsx,ts,tsx,json,css}\"",
    "lint": "eslint \"{core,examples,plugins}/**/*.{js,jsx,ts,tsx}\"",
    "clean": "find . -name 'node_modules' -type d | xargs rm -rf && find . -name 'dist' -type d | xargs rm -rf && find . -name '.cache' -type d"
  },
  "devDependencies": {
    "@babel/core": "^7.1.5",
    "babel-eslint": "^10.0.1",
    "builtin-modules": "^3.1.0",
    "eslint": "^8.8.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "husky": "^1.3.1",
    "lerna": "^5.1.4",
    "lint-staged": "^8.1.0",
    "prettier": "^2.5.1",
    "replace-in-file": "^4.1.3"
  },
  "lint-staged": {
    "*.{js,jsx,json}": [
      "prettier --config --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run lint"
    }
  }
}
